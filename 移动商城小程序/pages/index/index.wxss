/**index.wxss**/
@import "../../template/common.wxss";
.swiper-item{
  display: block;
}
.slide-image {
  width: 100%;
  display: initial;
}
swiper {
  width: 100%;
}
.scroll-view_H{
  white-space: nowrap;
  background: #fff;
}

.scroll-view-item_H{
  display: inline-block;
  width: 100%;
}
.headimg{
  display:initial;
}
.headline{
  box-sizing: border-box;
  width: 100%;
  padding: 10px;
  font-size: 14px;
  color:#333;
  overflow: hidden;
}
.headline-img{
  float:left;
  width:25%;
  height:22px;
  box-sizing: border-box;
  padding-right:5px;
  vertical-align: middle;
}
.headline-text{
  float: left;
  width:75%;
  box-sizing: border-box;
  padding-left: 15px;
  white-space: normal;
  height:16px;
  line-height: 16px;
  margin: 3px 0;
  overflow: hidden;
  text-overflow: ellipsis;
}
view{
  background: #fff;
}
.classifytitle{
  font-size:14px;
  text-align: center;
  margin-top: 10px;
  padding:10px; 
  /*border-left:3px solid #FF6537;*/
}
.goodclassifyimg{
   width: 100%;
   min-height: 80px;
}
.classifyimg{
  width: 100%;
  max-height: 80px;
}
