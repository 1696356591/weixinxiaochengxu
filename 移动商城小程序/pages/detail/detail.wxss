view{
    background:#fff;
}
swiper{
    height:640rpx;
    box-shadow:0px 2px 3px #cccccc;
}
swiper-item{
    height:640rpx;
}
.slide-image{
    width:100%;
    height:640rpx;
}
.p-content{
    display:flex;
    flex-direction:row;
    margin-top:15px;
    background:#fff;
    height:26px;
    line-height:26px;
    padding:10px 10px 0 10px;
}
.p-price{
    color:red;
    height:26px;
    font-size:18px;
}
.p-date{
    padding:0px 15px 0 15px;
    color:#333;
}
.near{
    padding: 3px 12px;
    border: 1px solid #FF6537;
    color:#FF6537;
    border-radius:15px;
}
.localpng{
    width:16px;
    height:15px;
    margin-right:4px;
    position:relative;
    top:3px;
    left:0px
}
.service-info{
    display:flex;
    flex-direction:row;
    height:40px;
    padding:10px 10px 0 10px;
    color: #999999;
}
.servicetext{
    margin-right: 12px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow:ellipsis;
    line-height:40px;
}
.serviceimg{
    width:18px;
    height:18px;
    margin-right: 5px;
    position: relative;
    top: 4px;
    left: 0;
}